# This is Git's per-user configuration file.
[user]
  name = Junichi Kobayashi
  email = junichi.kobayashi@esm.co.jp
[pull]
  rebase = true
[core]
  editor = /usr/local/bin/vim
  excludesfile = /Users/ENIXER/dotfiles/.gitignore_global
[alias]
  delete-merged-branch = "!f () { git checkout $1; git branch --merged|egrep -v '\\*|develop|master'|xargs git branch -d; };f"
[ghq]
  root = ~/git
[fetch]
  prune = true
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[diff]
  compactionHeuristic = true
